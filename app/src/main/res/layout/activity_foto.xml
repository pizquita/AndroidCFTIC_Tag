<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".actividades.FotoActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_for_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorAzul"
        app:cardCornerRadius="100dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/descarga" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:onClick="tomarFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorGris"
            app:srcCompat="@drawable/baseline_camera_alt_white_48"
            android:layout_marginRight="5dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorGris"
            app:srcCompat="@drawable/baseline_folder_open_white_48"
            android:layout_marginLeft="5dp" />
    </LinearLayout>


</LinearLayout>